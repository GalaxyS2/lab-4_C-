#include <iostream>
#include <conio.h>
using namespace std;

class transport
{
public:
	virtual void out()=0;
	virtual void get() = 0;

	double weight;
	int seats;
	int price;

	void basicInfo()
	{
		cout << "- weight: "<< weight << endl;
		cout << "- seats: "<< seats << endl;
		  	}
  	};

class privat: public transport
{
public:

void get(){
cout << "Weight: ";
cin >> weight;
cout << "Seats: ";
cin >> seats;

}
};

class publ: public transport
{
public:
 virtual void out() = 0;
 double price;
 int standPlaces;

void get(){
cout << "Enter weight: ";
cin >> weight;
cout << "Enter the number of places for seating: ";
cin >> seats;
 cout << "Enter the price of the fare: ";
 cin >> price;
 cout << "Enter the number of seats for standing: ";
 cin >> standPlaces;

}
};

