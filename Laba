using namespace std;
//####################################
class transport
{
public:
	virtual void out()=0;
	virtual void get() = 0;

	double weight;
	int seats;
	int price;

	void basicInfo()
	{
		cout << "- вага: "<< weight << endl;
		cout << "- кiлькiсть мiсць: "<< seats << endl;
		  	}




  	};


//####################################
class privat: public transport
{
public:

void get(){
cout << "Вага: ";
cin >> weight;
cout << "Кiлькiсть мiсць: ";
cin >> seats;

}
};

class publ: public transport
{
public:
 virtual void out() = 0;
 double price;
 int standPlaces;

void get(){
